<div class="container mt-5">
  <h1 class="">Edit Task</h1>
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit%>
  <% end %>

<div class="mt-3">
 <%= link_to "Back to list", tasks_path, class: "btn btn-primary mt-3" %>
</div>
</div>
