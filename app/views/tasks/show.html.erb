<div class="container mt-5">
  <div class="card p-3">
    <h1 clas="card-title"><%= @task.title %></h1>
    <p class="card-text"><%= @task.completed ? "✔️ You completed this" : "❌ You haven't done it yet" %></p>
    <p class="card-text"><%= @task.details %></p>
    <div class="mt-3">
      <%= link_to "Back to list", tasks_path, class: "btn btn-primary mt-3" %>
      <%=link_to "Edit", edit_task_path(@task), class: "btn btn-primary mt-3" %>
      <%= link_to "Delete", delete_task_path(@task), class: "btn btn-primary mt-3", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </div>
  </div>
</div>
