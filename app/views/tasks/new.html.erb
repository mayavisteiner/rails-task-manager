<div class="container mt-5">
  <div class="card p-3">
    <h1>New Task</h1>
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <%= f.submit %>
    <% end %>
    <%= link_to "Back to list", tasks_path, class: "btn btn-primary mt-3" %>
  </div>
</div>
